{
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.1"
        }
    },
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/assets/img/(.*)",
            "dest": "/public/image/$1"
        },
        {
            "src": "/assets/css/(.*)",
            "dest": "/public/css/$1"
        },
        {
            "src": "/assets/js/(.*)",
            "dest": "/public/js/$1"
        },
        {
            "src": "/views/index.php",
            "dest": "/views/index.php"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index.php"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}